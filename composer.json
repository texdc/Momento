{
    "name": "texdc/momento",
    "description": "A library for domain events",
    "type": "library",
    "keywords": ["ddd", "domain event"],
    "license": "MIT",
    "require": {
        "php": "^5.6 || ^7.0",
        "mathiasverraes/classfunctions": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": { "texdc\\momento\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "texdc\\momento\\test\\": "test/" }
    },
    "config": {
        "platform": { "php": "5.6" },
        "preferred-install": "dist"
    },
    "archive": {
        "exclude": ["/test", "/build", "/.*", "/phpunit.xml.dist"]
    }
}
